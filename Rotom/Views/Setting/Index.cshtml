@model SettingsModel

@inject IViewLocalizer _localizer;

@{
    ViewData["Title"] = _localizer[Resources.Views.Setting.Index.Settings];
}

@using (Html.BeginForm(Controllers.SettingController.Actions.Index, Controllers.SettingController.Name, FormMethod.Post))
{
    <div class="row justify-content-center">
        <div class="col col-sm-7 col-md-6 col-lg-5">
            <div class="row">
                <div class="col">
                    <h2>@_localizer[Resources.Views.Setting.Index.ChangeSettings]</h2>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @_localizer[Resources.Views.Setting.Index.RabbitMQHostname]
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.TextBoxFor(m => m.RabbitMQHostname, new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @_localizer[Resources.Views.Setting.Index.RabbitMQPort]
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.TextBoxFor(m => m.RabbitMQPort, new { @class = "form-control", required = "required" })
                </div>
            </div>
            
            <div class="row pt-2">
                <div class="col">
                    <input class="btn btn-primary" type="submit" value="@_localizer[Resources.Views.Setting.Index.SaveSettings]" />
                    <a href="@Url.Action(Controllers.HomeController.Actions.Index, Controllers.HomeController.Name)" class="btn btn-secondary">@_localizer[Resources.Views.Setting.Index.Cancel]</a>
                </div>
            </div>
        </div>
    </div>
}
