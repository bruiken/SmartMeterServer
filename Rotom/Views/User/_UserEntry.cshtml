@model UserModel

<div class="row border-bottom py-2">
    <div class="col-2 my-auto">
        @Model.Id
    </div>
    <div class="col my-auto">
        @Model.Username
        <span class="badge rounded-pill bg-primary">@Model.RoleName</span>
    </div>
    <div class="col-auto">
        <a href="@Url.Action(Controllers.UserController.Actions.DeleteUser, Controllers.UserController.Name, new { id = Model.Id })" class="btn btn-danger float-end"><i class="fa-solid fa-trash"></i></a>
    </div>
</div>