<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#111111" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#eeeeee" media="(prefers-color-scheme: dark)">
    <meta name="color-scheme" content="light dark">

    <title>@ViewData["Title"] - SmartMeterServer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @await Html.PartialAsync("_ErrorToastPartial")
    
    <div class="container">
        <div class="d-flex flex-column min-vh-100">
            <main role="main" class="py-3 flex-grow-1">
                @RenderBody()
            </main> 
            <footer class="footer text-muted flex-shrink-1 py-3">
                &copy; @System.DateTime.UtcNow.Year - SmartMeterServer  
            </footer>
        </div>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>